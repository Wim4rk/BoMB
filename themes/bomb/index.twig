<!DOCTYPE html>
<html class="no-js" lang="sv">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="{{ theme_url }}/../shared/img/favicon.ico">
    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>

    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}

    <!-- <link rel="stylesheet" href="{{ theme_url }}/../shared/css/font-awsome.min.css" type="text/css" /> -->
    <!-- End -->
    <link rel="stylesheet" href="{{ theme_url }}/css/style.css" type="text/css" />

</head>
<!-- "Widescreen-mode" can be activated in BoMB/config/config.yml -->
<body{% if config.theme_config.widescreen %} class="widescreen"{% endif %}
    style='background-image: url("{{ base_url }}/assets/img/hth_bred.jpg");
    background-position: center;
    background-size: cover;
    background-attachment: fixed;
    '>
    <div class="front-page">
        {{ include( 'nav.twig' ) }}
        <div class="above-fold container cover section">
            <div class="hero-header">
                <h1>Borgmästarbrasset</h1>
            </div>
            <div class="project">
                <h1>Från Hårga till Harlem</h1>
                <div class="date-container">
                    <div class="project-date">
                        <a href="?harga/jarvso">
                            <h2>Järvsö</h2>
                            <p>8 juli</p>
                        </a>
                    </div>
                    <div class="project-date">
                        <a href="?harga/soderhamn">
                            <h2>Söderhamn</h2>
                            <p>9 juli</p>
                        </a>
                    </div>
                    <div class="project-date">
                        <a href="?harga/hudiksvall">
                            <h2>Hudiksvall</h2>
                            <p>10 juli</p>
                        </a>
                    </div>
                </div>
            </div>
            <div id="scroll" class="scroll-button">
                <a href="#main" class="scroll-down"><span class="sr-only">Scroll</span></a>
            </div>
        </div>
        <div id="main" class="below-fold" role="main">
            <div id="article-wrapper" class="content">
                <article class="article main">
                    {{ content }}
                </article>
            </div>
            {{ include( 'footer.twig' ) }}
        </div>
    </div>

    <script src="{{ theme_url }}/../shared//js/modernizr-3.3.1-custom.min.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/../shared//js/utils.js" type="text/javascript"></script>
    <script src="{{ theme_url }}/../shared//js/responsive-navbar.js" type="text/javascript"></script>
    </body>
    </html>
